pipeline {
    agent { docker { image 'python:3.8.1' } }
    stages {
        stage('build') {
            steps {
                withEnv(["HOME=$env.WORKSPACE"]){
                    sh 'pip install --user -r requirements.txt'
                }
            }
        }
        stage('test') {
            steps {
                withEnv(["HOME=$env.WORKSPACE"]){
                    // sh 'nosetests --with-xunit --xunit-file=coverage.xml --all-modules --traverse-namespace --with-coverage'
                    sh 'python -m pylint -f parseable *.py > pylint.out'
                    sh 'python -m pytest --verbose --junit-xml coverage.xml'
                    // sh 'python -m pylint --verbose -f json *.py'
                }
            }
        }
        stage('Extract Test Results') {
            steps {
                cobertura coberturaReportFile: '**/coverage.xml'

            }
        }
    }
    // post {
    //         always {
    //             junit '**/nosetests.xml'
    //             step([$class: 'CoberturaPublisher', autoUpdateHealth: false, autoUpdateStability: false, coberturaReportFile: '**/coverage.xml', failUnhealthy: false, failUnstable: false, maxNumberOfBuilds: 0, onlyStable: false, sourceEncoding: 'ASCII', zoomCoverageChart: false])
    //         }
    // }
}
